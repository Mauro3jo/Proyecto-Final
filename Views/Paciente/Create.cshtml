@model Turnos.Models.Paciente

<!DOCTYPE html>

<html>
<head>
    <meta name=viewport content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Paciente</h4>
<hr />
<div class=row>
    <div >
        <form class="col s12"asp-action=Create>
            <div asp-validation-summary=ModelOnly ></div>
             <div class="row">
                 
             <div class="input-field col s6">
             <i class="material-icons prefix">account_circle</i>
             <input  asp-for="Nombre" type="text" class="validate">
             <label asp-for="Nombre"></label>
             <span asp-validation-for=Nombre ></span>
             </div>

             <div class="input-field col s6">
            <input asp-for="Apellido"  type="Text" class="validate">
             <label asp-for="Apellido" ></label>
             <span asp-validation-for=Apellido ></span>
             </div>

             <div class="input-field col s12">
             <i class="material-icons prefix">assignment_ind</i>
             <input asp-for="DNI"  type="tel" class="validate">
             <label asp-for="DNI" ></label>
             <span asp-validation-for=DNI ></span>
             </div>

             <div class="input-field col s12">
             <i class="material-icons prefix">event_note</i>
                <label asp-for=FechaNac ></label>
                 <input asp-for=FechaNac type="text" class="datepicker" />
                <span asp-validation-for=FechaNac ></span>
            </div >
                  
            <div class="input-field col s12">
             <i class="material-icons prefix">markunread_mailbox</i>
             <input asp-for="Direccion"  type="tel" class="validate">
             <label asp-for="Direccion" ></label>
             <span asp-validation-for=Direccion ></span>
             </div>

              <div class="input-field col s12">
              <i class="material-icons prefix">phone</i>
              <input asp-for="Telefono" type="tel" class="validate">
              <label asp-for="Telefono"></label>
              <span asp-validation-for=Telefono ></span>
              </div>
              

             </div>
           
            <div class="row">
            <div class="col s6 m6">
                  <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Grabar
                 <i class="material-icons right">send</i>
                </button>
            </div>
            <div class="col s6 m6">
                <a class="waves-effect waves-light btn grey darken-4" asp-action="index"><i class="material-icons left">undo</i>Volver</a>
                 
          </div>
          </div>
        </form>
    </div>
</div>



</body>
</html>

