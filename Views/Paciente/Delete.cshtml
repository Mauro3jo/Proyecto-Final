@model Turnos.Models.Paciente

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>
<body>

<h4>Seguro Desea eliminar el siguiente Paciente?</h4>
<div>
    <h5>Paciente</h5>
    <hr />
    <div class="row">
    <div class="col s12 m6">
      <div class="card hoverable green accent-4">
        <div class="card-content white-text">
          <span class="card-title"><h5><b> @Html.DisplayFor(model => model.Nombre),@Html.DisplayFor(model => model.Apellido)</b></h5></span>
          <p><dl class="row">
       <hr>
        <dt >
          <h6>@Html.DisplayNameFor(model => model.DNI): @Html.DisplayFor(model => model.DNI)</h6>  
        </dt>
      <hr>
      <hr>
        <dt >
          <h6>@Html.DisplayNameFor(model => model.FechaNac): @Html.DisplayFor(model => model.FechaNac)</h6>  
        </dt>
      <hr>
        <dt >
          <h6>@Html.DisplayNameFor(model => model.Direccion): @Html.DisplayFor(model => model.Direccion)</h6>
        </dt>
       <hr>
        <dt >
          <h6>@Html.DisplayNameFor(model => model.Telefono): @Html.DisplayFor(model => model.Telefono)</h6>  
        </dt>
      <hr>
        
      
        
       </dl></p>
        </div>
        <div class="card-action blue-grey darken-2">
       <form asp-action="Delete">
        <input type="hidden" asp-for="IdPaciente">
        <Input type="submit" value="Eliminar" class="waves-effect waves-light btn-smal orange lighten-2"></Input>
        <a asp-action="Index"  class="right">Volver</a>
       </form>
        </div>
      </div>
    </div>
  </div>
    
    
   
</div>
</body>
</html>
