@model Turnos.Models.Practica

<!DOCTYPE html>

<html>
<head>
    <meta name=viewport content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h5>Practica</h5>
<hr />
<div class=row>
    <div >
        <form class="col s12" asp-action=Edit>
            <div asp-validation-summary=ModelOnly ></div>
            <input type="hidden" asp-for="IdPractica"/>
            <div asp-validation-summary=ModelOnly ></div>

             <div class="row">
             <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
             <input  asp-for="NombrePractica" type="text" class="validate">
             <label asp-for="NombrePractica"></label>
             <span asp-validation-for=NombrePractica ></span>
             </div>

            <div asp-validation-summary=ModelOnly ></div>
             <div class="row">
             <div class="input-field col s12">
             <i class="material-icons prefix">account_circle</i>
             <input  asp-for="Codigo" type="text" class="validate">
             <label asp-for="Codigo"></label>
             <span asp-validation-for=Codigo ></span>
             </div>
            
          
            <div class="row">
            <div class="col s6 m6">
                  <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Grabar
                 <i class="material-icons right">send</i>
                </button>
            </div>
            <div class="col s6 m6">
                <a class="waves-effect waves-light btn grey darken-4" asp-action="index"><i class="material-icons left">undo</i>Volver</a>
                 
          </div>
           </div>
        </form>
    </div>
</div>
</body>
</html>
